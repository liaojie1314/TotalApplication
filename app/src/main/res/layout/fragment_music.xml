<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:looper="http://schemas.android.com/apk/res-auto">
    <com.example.totalapplication.views.LooperPager
        android:id="@+id/sun_looper_pager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        looper:is_title_show="false"
        looper:show_page_count="multi"
        looper:switch_time="3000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/music_text"
        android:textSize="22sp"/>

</RelativeLayout>