<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:id="@+id/my_iv"
        android:src="@mipmap/icon_app_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_tv_title"
        android:layout_toRightOf="@id/my_iv"
        android:text="20220106_222123录音"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_tv_duration"
        android:layout_below="@id/my_tv_title"
        android:text="00:00:23"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/my_tv_title"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_iv_close"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_error"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_iv_next"
        android:src="@mipmap/icon_next"
        android:layout_alignBottom="@id/my_iv"
        android:layout_toLeftOf="@id/my_iv_close"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_iv_play"
        android:src="@mipmap/red_play"
        android:layout_alignTop="@id/my_iv_next"
        android:layout_toLeftOf="@id/my_iv_next"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_iv_last"
        android:src="@mipmap/icon_last"
        android:layout_alignBottom="@id/my_iv"
        android:layout_toLeftOf="@id/my_iv_play"/>

</RelativeLayout>